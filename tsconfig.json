{
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "outDir": "./bin",
    "target": "ES5",
    "paths": {
      "@": ["./src"],
      "@utils": ["./src/utils"],
      "@commands": ["./src/commands"],
      "@config": ["./src/config"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
